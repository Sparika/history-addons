{
  "name": "__MSG_appName__",
  "version": "1.0.7",
  "manifest_version": 2,
  "description": "__MSG_appDescription__",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "scripts/chromereload.js",
      "scripts/background.js"
    ]
  },
  "browser_action": {
    "default_icon":  {
      "16": "images/icon-16.png",
      "128": "images/icon-128.png"
    },
    "default_popup": "popup.html"
  },
  "permissions": [
    "history",
    "storage",
    "webRequest",
    "*://*.google.com/",
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}
